---
import { type BlogsProps } from "../BlogsLIst/BlogsList.astro";

const { title, blogId, createAt, desc, tags, type } = Astro.props as BlogsProps;
---

<div class="bg-[#31363F] w-full flex items-start justify-between h-[190px] rounded-xl p-5 text-white">
    <div class="w-full mr-16">
        <div class="flex items-center h-[50px]">
            <div class="bg-[#76ABAE] h-[3px] w-[30px] rotate-90 rounded-full my-2"></div>
            <h2 class="text-2xl font-bold text-white">{title}</h2>
        </div>

        <div class="flex items-center gap-5 ml-7 w-full">
            <div class="flex items-center gap-2">
                <div class="bg-[#222831] h-[35px] w-[35px] rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 text-[#76ABAE]">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5"
                        ></path>
                    </svg>
                </div>
                <p class="text-[1rem] text-[#EEEEEE] my-5">{createAt}</p>
            </div>

            <div class="flex items-center gap-2">
                <div class="bg-[#222831] h-[35px] w-[35px] rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={1.5} stroke="currentColor" class="size-5 text-[#76ABAE]">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z"
                        ></path>
                    </svg>
                </div>
                <p class="text-[1rem] text-[#EEEEEE] my-5">{type}</p>
            </div>

            <div class="flex items-center gap-2">
                <div class="bg-[#222831] h-[35px] w-[35px] rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 text-[#76ABAE]">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 8.25h15m-16.5 7.5h15m-1.8-13.5-3.9 19.5m-2.1-19.5-3.9 19.5"></path>
                    </svg>
                </div>
                <p class="text-[1rem] text-[#EEEEEE] my-5">
                    {
                        tags?.map((tag) => (
                            <div>
                                <span class="text-[#EEEEEE]"> {tag}</span> <span class="text-[#76ABAE]">/</span>
                            </div>
                        ))
                    }
                </p>
            </div>
        </div>
        <p dir="rtl" class="text-[1.1rem] text-[#EEEEEE] ml-7 w-full">
            {desc}
        </p>
    </div>

    <a href={`/blogs/${blogId}`} class="h-full active:scale-90 transition-all">
        <div class="bg-[#222831] h-full w-[40px] flex items-center justify-center rounded-xl">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-[#76ABAE]">
                <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
        </div>
    </a>
</div>
