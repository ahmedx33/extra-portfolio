---
import ProjectCard from "../ProjectCard/ProjectCard.astro";
import { projectsList } from "../ProjectsPage/Projects.constants.astro";

const latestProjects = projectsList.slice(0, 3);
---

<div class="bg-transparent w-full h-fit rounded-md text-white flex items-center justify-start max-lg:justify-center gap-5 flex-wrap">
    {latestProjects.map((project) => <ProjectCard {...project} />)}
</div>
